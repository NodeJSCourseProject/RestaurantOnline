extends layout.pug
block styles
    link(rel="stylesheet" href='')

block main-content
    .container
        .row
            .col-xs-12.col-sm-6.col-md-6.profile-box
                .well.well-sm
                    .row
                        .col-sm-6.col-md-4
                            img.img-rounded.img-responsive(src="http://yeslk.com/images/OIP-M56b703cb09f76bbca66f8c9daae538e7H0.jpg", alt="avatar-logo")
                        .col-sm-6.col-md-8
                            h4 Username: #{loadedUsername.username}
                            div
                                i.glyphicon.glyphicon-envelope 
                                    span #{loadedUsername.email}
                            br
                            div
                                i.glyphicon.glyphicon-user 
                                    span Full Name: #{loadedUsername.firstName} #{loadedUsername.lastName}
                            br
                            div
                                i.glyphicon.glyphicon-education 
                                    span User Status: #{loadedUsername.role}
                            br
            .col-xs-12.col-sm-6.col-md-6
                    div
                        a.btn.btn-info(href= loadedUsername.username + "/posts", title="title") All posts by #{loadedUsername.username}
                    br
            .col-xs-12.col-sm-6.col-md-6
                .well.well-sm
                    div
                        i.glyphicon.glyphicon-comment 
                            span Comments: 
            .col-xs-12.col-sm-6.col-md-6
                .well.well-sm
                    div
                        i.glyphicon.glyphicon-list-alt 
                            span Subscriptions:


