extends ../home
block content
    if context.meals.length 
        h3 Soups  
        div.btn-group
            each prop in context.searchProps
                a.btn-success(href='/meals/:'+context.categoryId+'?orderby='+prop) 
                    =prop
        each meal in context.meals
            div.row
                div.col-sm-4.col-md-3
                    div.thumbnail
                        //- img
                        h3
                            =meal.name
                        p
                            =meal.description
                        p
                            | Weight:
                            =meal.weight
                        p
                            | Price:
                            = meal.price
                        form.form-inline(action="/shoppingcart/add/:"+meal._id method="POST")
                            input.form-control(type="number" name="quantity" min="1")
                            button.btn.btn-success.btn-xs(type="submit") Add
    else
        p
            | No Meals yet...

