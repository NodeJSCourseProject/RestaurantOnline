
block styles
link(href="/static/css/main/nav.css", rel="stylesheet")
nav.navbar.navbar-inverse.navbar-static-top
        .navbar-header
            button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#bs-example-navbar-collapse-1", aria-expanded="false")
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar

        #main-navigation.collapse.navbar-collapse
            ul.nav.navbar-nav
                li.active
                    a(href="/") Home
                li
                    a(href="/news") Menu
                li
                    a(href="/reviews") Orders
                li
                    a(href="/guides") Profile
                li
                    a(href="/guides") Restaurants
                li
                    form.search-form(role="search", method="get" action="/search")
                        label
                            input.search-field(type="search", title="Search efter:", name="val", placeholder="Search")
                            input.search-submit(type="submit" value="Search")
            ul.nav.navbar-nav.navbar-right
                if currentUser
                    li.dropdown
                        a.dropdown-toggle(href="#", data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false")
                            span.glyphicon.glyphicon-user
                            | #{currentUser.username} 
                            b.caret
                        ul.dropdown-menu
                            li
                                a(href="/profile/"+currentUser.username)
                                    span.glyphicon.glyphicon-user
                                    | Profile
                            li
                                a(href="/settings/"+currentUser.username)
                                    span.glyphicon.glyphicon-cog
                                    | Settings
                            li.divider
                            li
                                a#logout-btn(href="/logout")
                                    span.glyphicon.glyphicon-cog
                                    | Logout
                else
                    include register.pug
                    include login.pug

block main-content